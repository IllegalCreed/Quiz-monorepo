#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run workspace type-check and tests where available. Fail push if any check fails.
pnpm -w -r run type-check --if-present || { echo "Type-check failed"; exit 1; }
pnpm -w -r run test --if-present || { echo "Package tests failed"; exit 1; }
pnpm -w -r run test:unit --if-present || { echo "Unit tests failed"; exit 1; }
