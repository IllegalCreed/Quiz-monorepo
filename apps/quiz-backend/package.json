{
  "name": "quiz-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "start:test": "NODE_ENV=test nest start",
    "dev": "pnpm run start:dev",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"prisma/**/*.ts\" \"scripts/**/*.{ts,js}\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "db:create": "node scripts/create-db.js",
    "db:seed": "pnpm run db:seed:dev",
    "db:seed:dev": "node -r ts-node/register scripts/seed.ts dev",
    "db:seed:test": "node -r ts-node/register scripts/seed.ts test",
    "db:seed:prod": "node -r ts-node/register scripts/seed.ts prod",
    "db:seed:system": "ts-node prisma/seed-system.ts",
    "db:seed:test:raw": "ts-node prisma/seed-test.ts",
    "db:reset": "ts-node prisma/reset-test.ts",
    "db:setup:test": "pnpm run prisma:migrate && pnpm run db:seed:system && pnpm run db:seed:test",
    "lint": "NODE_OPTIONS='-r ts-node/register' eslint 'src/**/*.{ts,js}' --ext .ts",
    "lint:fix": "NODE_OPTIONS='-r ts-node/register' eslint 'src/**/*.{ts,js}' --ext .ts --fix",
    "lint:eslint": "NODE_OPTIONS='-r ts-node/register' eslint . --ext .ts",
    "test": "jest",
    "type-check": "node ./scripts/type-check-backend.js"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.11",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@prisma/client": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "mysql2": "^3.16.0",
    "prettier": "^3.8.0",
    "prisma": "^7.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
