{
  "name": "quiz-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "start:local": "node -r ts-node/register src/main.ts",
    "start:dev": "pnpm run dev",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "db:create": "node scripts/create-db.js",
    "db:seed": "pnpm -C apps/quiz-backend run db:seed:system && pnpm -C apps/quiz-backend run db:seed:test",
    "db:seed:system": "ts-node prisma/seed-system.ts",
    "db:seed:test": "ts-node prisma/seed-test.ts",
    "db:reset": "ts-node prisma/reset-test.ts",
    "db:setup:test": "pnpm run prisma:migrate && pnpm run db:seed:system && pnpm run db:seed:test",
    "lint": "NODE_OPTIONS='-r ts-node/register' eslint 'src/**/*.{ts,js}' --ext .ts",
    "lint:fix": "NODE_OPTIONS='-r ts-node/register' eslint 'src/**/*.{ts,js}' --ext .ts --fix",
    "lint:eslint": "NODE_OPTIONS='-r ts-node/register' eslint . --ext .ts",
    "test": "jest",
    "type-check": "node ./scripts/type-check-backend.js"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.11",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@prisma/client": "^7.2.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "mysql2": "^3.16.0",
    "prisma": "^7.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
