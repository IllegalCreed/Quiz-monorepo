{
  "name": "quiz-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "start:local": "node -r ts-node/register src/main.ts",
    "start:dev": "pnpm run dev",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "db:create": "node scripts/create-db.js",
    "db:seed": "node prisma/seed.js",
    "test": "jest"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.11",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@prisma/client": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "dotenv": "^17.2.3",
    "jest": "^30.2.0",
    "mysql2": "^3.16.0",
    "prisma": "^4.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
