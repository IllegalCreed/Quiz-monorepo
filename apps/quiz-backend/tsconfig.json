{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "ignoreDeprecations": "6.0",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "jest.config.ts", "src/**/*.spec.ts", "src/**/__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}