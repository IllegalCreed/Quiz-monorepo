{
  "compilerOptions": {
    "module": "Node16",
    "target": "es2020",
    "moduleResolution": "node16",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/__tests__/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
