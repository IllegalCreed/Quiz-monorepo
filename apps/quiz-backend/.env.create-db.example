# Copy to .env.create-db.local and fill real values
# Must provide a privileged account able to create DBs and users (e.g., root or admin)
DB_ROOT_USERNAME=root
DB_ROOT_PASSWORD=your_root_password

# Host where your RDS is reachable
DATABASE_HOST=YOUR_RDS_HOST
DATABASE_PORT=3306

# Optional: set these to control names
TEST_DATABASE_NAME=quiz_test
TEST_DATABASE_USER=quiz_test_user
# TEST_DATABASE_PASSWORD=choose_a_strong_password

# To create production DB, explicitly confirm this (safety measure)
# CONFIRM_CREATE_PROD=true
# PROD_DATABASE_NAME=quiz_prod
# PROD_DATABASE_USER=quiz_prod_user
# PROD_DATABASE_PASSWORD=choose_a_strong_password
