# Copy to .env.create-db.local and fill real values
# Must provide a privileged account able to create DBs and users (e.g., root or admin)
DB_ROOT_USERNAME=root
DB_ROOT_PASSWORD=your_root_password

# Host where your RDS is reachable
DATABASE_HOST=YOUR_RDS_HOST
DATABASE_PORT=3306

# Optional: customize the names and users if you like
DEV_DATABASE_NAME=quiz_dev
