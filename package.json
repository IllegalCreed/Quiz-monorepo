{
  "name": "quiz-monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:frontend": "pnpm -C apps/quiz-app run dev",
    "dev:backend": "pnpm -C apps/quiz-backend run dev",
    "build": "turbo run build",
    "build:frontend": "pnpm -C apps/quiz-app run build",
    "build:backend": "pnpm -C apps/quiz-backend run build",
    "preview": "pnpm -C apps/quiz-backend run build && pnpm -C apps/quiz-app run build && concurrently \"pnpm -C apps/quiz-backend run start:prod\" \"pnpm -C apps/quiz-app run preview\"",
    "preview:frontend": "pnpm -C apps/quiz-app run preview",
    "preview:backend": "pnpm -C apps/quiz-backend run build && pnpm -C apps/quiz-backend run start:prod",
    "test": "turbo run test",
    "test:backend": "pnpm -C apps/quiz-backend run test",
    "test:frontend": "pnpm -C apps/quiz-app run test:unit",
    "lint": "turbo run lint",
    "type-check": "pnpm -w -r run type-check --if-present",
    "format": "prettier --write .",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "pnpm -w -r run lint:eslint -- --fix"
    ],
    "*.{json,md,css,scss}": [
      "pnpm -w -r run format"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "turbo": "^2.7.4",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.7",
    "prettier": "^2.8.8",
    "concurrently": "^8.2.0"
  }
}
