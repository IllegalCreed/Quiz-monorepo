{
  "name": "quiz-monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:frontend": "pnpm -C apps/quiz-app run dev",
    "dev:backend": "pnpm -C apps/quiz-backend run dev",
    "build": "turbo run build",
    "build:frontend": "pnpm -C apps/quiz-app run build",
    "build:backend": "pnpm -C apps/quiz-backend run build",
    "preview": "turbo run preview --parallel",
    "preview:frontend": "pnpm -C apps/quiz-app run preview",
    "preview:backend": "pnpm -C apps/quiz-backend run preview",
    "preview:test": "sh ./scripts/preview-test.sh",
    "pretest": "sh ./scripts/regenerate-test-secret.sh",
    "test": "turbo run test --concurrency 1",
    "test:frontend": "pnpm -C apps/quiz-app run test",
    "test:backend": "pnpm -C apps/quiz-backend run test",
    "lint": "turbo run lint",
    "lint:fix": "pnpm -w -r run lint:fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write .",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "pnpm -w -r run lint:eslint -- --fix"
    ],
    "*.{json,md,css,scss}": [
      "pnpm -w -r run format"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.28.0",
  "devDependencies": {
    "@storybook/addon-docs": "^10.1.11",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "turbo": "^2.7.5"
  }
}
